  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "bracketSameLine": false,
  "arrowParens": "avoid",
  "printWidth": 100,
  "bracketSpacing": true,
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "tabWidth": 4,
        "bracketSameLine": true,
        "printWidth": 90,
        "bracketSpacing": true
      }
    }
  ]
}
